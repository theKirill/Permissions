<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/buttonStartMyApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonStartMyAppClick"
            android:id="@+id/buttonStartMyApp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.037" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/buttonStartCallApp"
            android:layout_width="146dp"
            android:layout_height="52dp"
            android:id="@+id/buttonStartAppCall"
            android:onClick="buttonStartAppCall"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonStartMyApp"
            app:layout_constraintVertical_bias="0.060000002" app:layout_constraintHorizontal_bias="0.51"/>
    <Button
            android:text="@string/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="locationOnClick"
            android:id="@+id/buttonLocation" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonStartAppCall" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.029999971"/>

</android.support.constraint.ConstraintLayout>